root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 4
indent_style = space
trim_trailing_whitespace = true
max_line_length = off

[*.{sh,zshrc}]
binary_next_line = true
function_next_line = true
keep_padding = false
space_redirects = true
switch_case_indent = true
